---
import type { Project } from "../data/portfolio";
import { projectsData } from "../data/portfolio";
---

<section id="projects" class="py-20 luxury-bg-gradient">
  <div class="container mx-auto px-4 max-w-6xl">
    <h2
      class="text-4xl md:text-5xl font-luxury font-bold mb-16 text-center luxury-title projects-title"
    >
      Meine Projekte
    </h2>

    <div class="projects-container space-y-24">
      {
        projectsData.map((project: Project, index: number) => (
          <div
            class="project-item grid grid-cols-1 lg:grid-cols-2 gap-8 opacity-0 luxury-card"
            data-index={index}
          >
            <div class="project-info flex flex-col justify-center">
              <h3 class="text-2xl md:text-3xl font-luxury font-bold mb-4 luxury-title">
                {project.title}
              </h3>
              <p class="luxury-text mb-6">{project.description}</p>

              <div class="flex flex-wrap justify-center gap-4 mb-10">
                {project.githubUrl && (
                  <a
                    href={project.githubUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="btn-secondary"
                    style="border: 2px solid #D6B79F !important; color: #D6B79F !important; background: transparent !important; padding: 0.75rem 1.5rem !important; border-radius: 0.375rem !important; display: inline-flex !important; align-items: center !important; gap: 0.5rem !important; text-decoration: none !important; font-weight: 600 !important; transition: all 0.3s ease !important;"
                  >
                    <i class="fab fa-github" />
                    <span>Code ansehen</span>
                  </a>
                )}

                {project.liveUrl && (
                  <a
                    href={project.liveUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="btn-secondary"
                    style="border: 2px solid #D6B79F !important; color: #D6B79F !important; background: transparent !important; padding: 0.75rem 1.5rem !important; border-radius: 0.375rem !important; display: inline-flex !important; align-items: center !important; gap: 0.5rem !important; text-decoration: none !important; font-weight: 600 !important; transition: all 0.3s ease !important;"
                  >
                    {project.liveUrl.endsWith(".pptx") ? (
                      <>
                        <i class="fas fa-file-powerpoint" />
                        <span>Präsentation ansehen</span>
                      </>
                    ) : (
                      <>
                        <i class="fas fa-external-link-alt" />
                        <span>Demo ansehen</span>
                      </>
                    )}
                  </a>
                )}

                {project.documentationUrl && (
                  <a
                    href={project.documentationUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="btn-secondary"
                    style="border: 2px solid #D6B79F !important; color: #D6B79F !important; background: transparent !important; padding: 0.75rem 1.5rem !important; border-radius: 0.375rem !important; display: inline-flex !important; align-items: center !important; gap: 0.5rem !important; text-decoration: none !important; font-weight: 600 !important; transition: all 0.3s ease !important;"
                  >
                    <i class="fas fa-file-pdf" />
                    <span>Dokumentation ansehen</span>
                  </a>
                )}
              </div>
            </div>

            <div class="project-gallery grid grid-cols-2 gap-3">
              {project.images
                .slice(0, 4)
                .map((image: string, imgIndex: number) => (
                  <div
                    class={`gallery-item rounded-lg overflow-hidden bg-luxury-cream border border-luxury-gold/20 flex items-center justify-center luxury-hover ${imgIndex === 0 ? "col-span-2 row-span-1" : ""}`}
                  >
                    <img
                      src={image}
                      alt={`${project.title} - Image ${imgIndex + 1}`}
                      class="max-w-full max-h-full object-contain"
                      onerror={`this.src='https://placehold.co/600x400/fafafa/D6B79F?text=Project+Image+${imgIndex + 1}'`}
                    />
                  </div>
                ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  /* ESTILOS FORZADOS CON MÁXIMA ESPECIFICIDAD - SOLUCIÓN DEFINITIVA */
  section#projects .btn-secondary,
  section#projects a[class*="btn-secondary"],
  .flex a.btn-secondary,
  div a.btn-secondary {
    display: inline-flex !important;
    align-items: center !important;
    gap: 0.5rem !important;
    font-weight: 600 !important;
    padding: 0.75rem 1.5rem !important;
    border-radius: 0.375rem !important;
    transition: all 0.3s ease !important;
    text-decoration: none !important;
    border: 2px solid #d6b79f !important;
    color: #d6b79f !important;
    background: transparent !important;
    font-family: Inter, sans-serif !important;
  }

  section#projects .btn-secondary:hover,
  section#projects a[class*="btn-secondary"]:hover,
  .flex a.btn-secondary:hover,
  div a.btn-secondary:hover {
    color: #d6b79f !important;
    background: linear-gradient(
      135deg,
      #ffffff 0%,
      #e5e5e5 50%,
      #cccccc 100%
    ) !important;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2) !important;
    border-color: #cccccc !important;
    transform: translateY(-2px) !important;
  }

  .gallery-item {
    height: 200px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .gallery-item:first-child {
    height: 280px;
  }

  .gallery-item:hover {
    border-color: #d6b79f;
    box-shadow: 0 4px 20px rgba(214, 183, 159, 0.3);
    transform: translateY(-2px);
  }

  @media (min-width: 768px) {
    .gallery-item {
      height: 180px;
    }

    .gallery-item:first-child {
      height: 260px;
    }
  }

  @media (min-width: 1024px) {
    .gallery-item {
      height: 200px;
    }

    .gallery-item:first-child {
      height: 280px;
    }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  // Title animation
  gsap.from(".projects-title", {
    opacity: 0,
    y: 50,
    duration: 1,
    scrollTrigger: {
      trigger: ".projects-title",
      start: "top bottom-=100",
      end: "top center",
      toggleActions: "play none none none",
    },
  });

  // Project items animation
  const projectItems = document.querySelectorAll(".project-item");
  projectItems.forEach((item, index) => {
    const direction = index % 2 === 0 ? -1 : 1;

    gsap.fromTo(
      item,
      {
        opacity: 0,
        x: 50 * direction,
      },
      {
        opacity: 1,
        x: 0,
        duration: 1,
        scrollTrigger: {
          trigger: item,
          start: "top bottom-=100",
          end: "top center",
          toggleActions: "play none none none",
        },
      },
    );
  });
</script>

